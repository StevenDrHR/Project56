<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shop Homepage - Start Bootstrap Template</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/shop-homepage.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script>

    </script>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="http://localhost:4567/Home">Homepage</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <script src="js/nav.js"></script>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <!--<h1 align="center">Profile</h1>
                <br>-->
                <p class="lead">Profile</p>
                <div class="list-group">
                    <a href="#" class="list-group-item" onclick="OrderHistoryContent()">Order History</a>
                    <a href="#" class="list-group-item" onclick="WishlistContent()">Wishlist</a>
                    <a href="#" class="list-group-item" onclick="FavouritesContent()">Favourites</a>
                    <a href="http://localhost:4567/Profile" class="list-group-item">Back To Profile</a>
                    <br>
                </div>

                <form class="form" id="logoutvisibility" method="POST" action="/Home">
                    <p class="tab0">Welcome : ${CurrentUser}</p>
                    <button type="submit" id="logout_button" name="iets" align="center">Logout</button>
                </form>

            </div>

            <div class="col-md-9">

                <div class="row carousel-holder">

                    <div class="col-md-12" id="main">
                        <h1 align="center">Profile information</h1>
                        <br>
                        <p class="tab1">Username : ${CurrentUser}</p><p class="tab1">First Name : ${firstname}</p>
                        <p class="tab1">User Level : ${userlevel}</p><p class="tab1">Last Name : ${lastname}</p>
                        <p class="tab1">Email: ${emailaddress}</p><p class="tab1">Age : ${age}</p>
                        <p class="tab1">Password: ${userpassword}</p><p class="tab1">User Status : ${userstatus}</p>


                    </div>

                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Shamala Webshop 2016</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <script>
        function OrderHistoryContent(){
            document.getElementById('main').innerHTML =
                    '<h1 align="center">Order History</h1><br> <p align="center">This is the order history of : ${CurrentUser}</p>';
        }
    </script>

    <script>
        function WishlistContent(){
            document.getElementById('main').innerHTML =
                    '<h1 align="center">Wish List</h1><br> <p align="center">This is the wish list of : ${CurrentUser}</p>';
        }

    </script>

    <script>
        function FavouritesContent(){
            document.getElementById('main').innerHTML =
                    '<h1 align="center">Favourites</h1><br> <p align="center">This is the favourites of : ${CurrentUser}</p>';
        }
    </script>

    <script>
            if("${userlevel}" == "admin"){
                var a = document.querySelector("#adminvisibility");
                a.style.display = "initial";
            }
    </script>

    <script>
        if("${userlevel}" == "admin" || "${userlevel}" == "user"){
            var a = document.querySelector("#registervisibility");
            a.style.display = "none";
            var b = document.querySelector("#logoutvisibility");
            b.style.display = "block";
        }
    </script>

</body>

</html>
